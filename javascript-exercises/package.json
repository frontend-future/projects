{
  "name": "javascript-exercises",
  "version": "1.0.0",
  "description": "JavaScript practice exercises with Jest tests",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": ["javascript", "exercises", "testing", "jest"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "javascript-exercises/**/*.js",
      "!javascript-exercises/**/*.spec.js",
      "!javascript-exercises/**/solution/**"
    ]
  }
}
